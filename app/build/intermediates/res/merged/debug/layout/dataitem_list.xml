<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/ldata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 信息类型-->
            <TextView
                android:id="@+id/ictype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="数据类型："
                android:textColor="#2e2e2e"
                android:textSize="@dimen/edittextSize" />

            <TextView
                android:id="@+id/itemsctype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/itemsImage"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="视频"
                android:textColor="#2e2e2e"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 备注说明 -->
            <TextView
                android:id="@+id/itemsremarks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="备注说明"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 采集时间-->
            <TextView
                android:id="@+id/icollectionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="上传时间："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView 
                android:id="@+id/itemscollectionTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="2018"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 采集人-->
            <TextView
                android:id="@+id/icollectionBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:layout_toRightOf="@+id/itemsImage"
                 android:layout_weight="0.2"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="    上传人："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView 
                android:id="@+id/itemscollectionBy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text=""
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="gone"
            android:orientation="horizontal" >

            <!-- 上传时间-->

            <TextView
                android:id="@+id/iuploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:layout_toRightOf="@+id/itemsImage"
                 android:layout_weight="0.2"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="上传时间："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView 
                android:id="@+id/itemsuploadTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="否"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="gone"
            android:orientation="horizontal" >

            <!-- 上传人-->

            <TextView
                android:id="@+id/iupLoadBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:layout_toRightOf="@+id/itemsImage"
                 android:layout_weight="0.2"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="    上传人："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView 
                android:id="@+id/itemsupLoadBy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="否"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 审批状态-->

            <TextView
                android:id="@+id/iappState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:layout_toRightOf="@+id/itemsImage"
                 android:layout_weight="0.2"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="审批状态："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView 
                android:id="@+id/itemsappState"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text=""
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>

        <!--点赞-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iappDianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/itemsImage"
                android:layout_weight="0.2"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="点赞总数："
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />

            <TextView
                android:id="@+id/itemsappDianzanTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/itemsImage"
                android:gravity="left"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text=""
                android:textColor="#7c7c7c"
                android:textSize="@dimen/edittextSize" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>