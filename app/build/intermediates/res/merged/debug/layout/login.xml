<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBG" 
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp" 
       
        >
  
        <View
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
              android:focusable="true"
            android:focusableInTouchMode="true" 
             android:background="@drawable/log" />
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:layout_gravity="center_horizontal"
    android:textSize="25dp"
    android:layout_marginTop="20dp"
    android:text="学习资源共享平台系统"/>
        <RelativeLayout
            android:id="@+id/layout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/userName"
                android:layout_width="fill_parent"
                  android:layout_height="45dp"
                     android:padding="7dp"
                     android:background="@drawable/bg_edittext"
                android:gravity="center_vertical"
                android:hint="@string/userName"
                android:inputType="text"
                android:maxLength="20"
                android:paddingBottom="10dip"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/edittextSize"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/username"
                />
            <ImageButton
                android:id="@+id/clearName"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/clear_icon"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip" >

            <EditText
                android:id="@+id/userPwd"
                android:layout_width="fill_parent"
                  android:layout_height="45dp"
                     android:padding="7dp"
                     android:background="@drawable/bg_edittext"
                android:gravity="center_vertical"
                android:hint="@string/userPwd"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:paddingBottom="10dip"
                android:textColor="@color/gray"
                android:textSize="@dimen/edittextSize" 
                 android:drawableLeft="@drawable/password_icon">
            </EditText>

            <ImageButton
                android:id="@+id/clearPwd"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="10dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/clear_icon"
                android:visibility="invisible" />
        </RelativeLayout>

    
        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_selector_yellow"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/buttonSize" />
			<Button
                android:id="@+id/updateUser"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_selector_white"
                android:text="@string/UpdateUser"
                android:textColor="@color/gray"
                android:textSize="@dimen/buttonSize"
                  />
            <Button
                android:id="@+id/registerBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@drawable/button_selector_white"
                android:text="@string/register"
                android:textColor="@color/gray"
                android:textSize="@dimen/buttonSize"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>